<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GymApp.PregledKorisnikaPage"
			 xmlns:local="clr-namespace:GymApp"
			 x:Name="PageRef">

	<ContentPage.Content>
		<ScrollView>
			<VerticalStackLayout Padding="20" Spacing="15">
				<Label Text="PostojeÄ‡i korisnici" FontSize="20" FontAttributes="Bold" Margin="0,20,0,0"/>

				<CollectionView x:Name="UsersCollectionView" ItemsSource="{Binding Users}">
					<CollectionView.ItemTemplate>
						<DataTemplate>
							<Frame BorderColor="#CCCCCC" Padding="15" Margin="0,5" CornerRadius="12" HasShadow="True">
								<StackLayout>
									<Label Text="{Binding FirstName}" FontAttributes="Bold" FontSize="16"/>
									<Label Text="{Binding LastName}" FontSize="14"/>
									<Label Text="{Binding Email}" FontSize="12" TextColor="Gray"/>
									<Button
										Text="Izmijeni"
										Command="{Binding Source={RelativeSource AncestorType={x:Type local:PregledKorisnikaPage}}, Path=BindingContext.EditUserCommand}"
										CommandParameter="{Binding}"
										BackgroundColor="#2196F3"
										TextColor="White"
										CornerRadius="8"
										Padding="8,4"/>
								</StackLayout>
							</Frame>
						</DataTemplate>
					</CollectionView.ItemTemplate>
				</CollectionView>
			</VerticalStackLayout>
		</ScrollView>
	</ContentPage.Content>

</ContentPage>