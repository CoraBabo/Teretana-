<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:GymApp"
             x:Class="GymApp.MainPage">

    <ContentPage.BindingContext>
        <local:UserViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <Label Text="Unos novog korisnika" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" TextColor="Black" />
            <Border Stroke="Grey" StrokeThickness="2">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="45,45,45,45" />
                </Border.StrokeShape>

                
                <ContentView Padding="10">
                    <Entry Placeholder="Ime" Text="{Binding FirstName}"  />
                </ContentView>
            </Border>

            <Border Stroke="Grey" StrokeThickness="2">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="30,30,30,30" />
                </Border.StrokeShape>

                
                <ContentView Padding="10">
                    <Entry Placeholder="Prezime" Text="{Binding LastName}"  />
                </ContentView>
            </Border>

            <Border Stroke="Grey" StrokeThickness="2">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="45,45,45,45" />
                </Border.StrokeShape>

                
                <ContentView Padding="10">
                    <Entry Placeholder="Email" Text="{Binding Email}"  />
                </ContentView>
            </Border>



            <Button Text="Dodaj korisnika" Command="{Binding AddUserCommand}" BackgroundColor="#4CAF50" TextColor="White" CornerRadius="8" Padding="10" />

            
            <BoxView HeightRequest="1" Color="#E0E0E0" Margin="0,20,0,0"/>

            
            <Label Text="Postojeći korisnici" FontSize="20" FontAttributes="Bold" Margin="0,20,0,0"/>

           
            <CollectionView ItemsSource="{Binding Users}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="#CCCCCC" Padding="15" Margin="0,5" CornerRadius="12" HasShadow="True">
                            <StackLayout>
                                <Label Text="{Binding FirstName}" FontAttributes="Bold" FontSize="16"/>
                                <Label Text="{Binding LastName}" FontSize="14"/>
                                <Label Text="{Binding Email}" FontSize="12" TextColor="Gray"/>
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
